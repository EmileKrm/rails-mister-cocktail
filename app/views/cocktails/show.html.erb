<h1>You chose <%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <ul>
    <li><%=  dose.ingredient.name %></li>
    <span><%=  dose.description %></spap>
    <span>
      <%= link_to "Delete ingredient", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    </span>

  </ul>
<% end %>

<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>

<%= link_to "Back", cocktails_path %>
<%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail) %>
